---
// src/components/CityPage.astro

import { cityDataMap } from "../../data/cities.js";
import "@fontsource-variable/montserrat";
import PopupWrapper from "./PopupWrapper";

// Empfangene Props
interface Props {
  city: string;
}

const { city } = Astro.props as Props;

// Daten für die angegebene Stadt abrufen
const cityData = cityDataMap[city.toLowerCase()];
---

<section class="bg-cover bg-center bg-gray-200 py-24">
  <div class="top-overlay flex max-w-screen-xl m-auto">
    <div class="top text-left">
      <div class="overlay">
        <div
          class="gap-8 items-center px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2 lg:px-6"
        >
          <div class="mt-4 md:mt-0">
            <h3
              class="mb-4 text-3xl tracking-tight font-extrabold text-gray-900 dark:text-white"
            >
              Teppichreinigung mit Abhol-<br /> und Bringservice in <strong
                >{cityData.name}</strong
              >
            </h3>
            <p
              class="mb-6 font-light text-black-500 md:text-base dark:text-gray-400"
            >
              <span class="font-bold"
                >Man schiebt die Teppichreinigung immer weiter auf, weil der
                Alltag einfach zu hektisch ist.
              </span>Aber gerade dann, wenn der Teppich seinen Glanz verliert
              oder Flecken sich hartnäckig festsetzen, wird es Zeit zu handeln.
              Keine Sorge, bei uns müssen Sie sich um nichts kümmern – wir
              machen es Ihnen so einfach wie möglich. Sie rufen uns an, und wir
              kümmern uns um den Rest. Ob Abholung, Beratung oder sogar
              Reparatur – alles läuft reibungslos ab, und Sie haben wieder Zeit
              für die wichtigen Dinge. Machen Sie es sich einfach und gönnen Sie
              Ihrem Teppich die Pflege, die er verdient. Ein Anruf, und der
              saubere Teppich ist schon fast bei Ihnen.
            </p>
          </div>
          <img
            class="shw w-full dark:hidden rounded"
            src={cityData.image2}
            alt="dashboard image"
          />
        </div>
      </div>
    </div>
  </div>
  <PopupWrapper client:load />
</section>

<style>
  .btnbox {
    display: flex;
    justify-content: center;
    width: 100%;
    padding-top: 32px;
  }

  button {
    background-color: #2d6aff;
    border-radius: 50px;
    border: 2px solid white;
    box-shadow: rgb(0 0 0 / 40%) 0px 7px 29px 0px;

    transition: 1s ease-in-out;
  }

  button:hover {
    border: 2px solid turquoise;
    transform: scale(1.008);
  }

  @media (width <= 767px) {
    section {
      padding: 3.5rem 1rem 5rem;
    }
  }
</style>
