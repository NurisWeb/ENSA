---
const features = [
  {
    title: "Automatic categorization",
    icon: "path/to/icon1.svg",
  },
  {
    title: "Budgeting methods",
    icon: "path/to/icon2.svg",
  },
  {
    title: "Budget goals",
    icon: "path/to/icon3.svg",
  },
  {
    title: "Reports and Analytics",
    icon: "path/to/icon4.svg",
  },
  {
    title: "Cloud synchronization",
    icon: "path/to/icon5.svg",
  },
  {
    title: "Alerts and notifications",
    icon: "path/to/icon6.svg",
  },
];
---

<section class="bg-white dark:bg-gray-900 antialiased pt-4">
  <div class="max-w-screen-xl px-4 py-12 mx-auto lg:px-6 sm:py-16 lg:py-24">
    <div class="max-w-3xl mx-auto text-center">
      <h2
        class="text-3xl font-extrabold leading-tight tracking-tight text-gray-900 sm:text-4xl dark:text-white"
      >
        Designed for business teams like yours
      </h2>
    </div>

    <div
      class="p-4 mt-8 rounded-lg sm:p-12 lg:mt-16 bg-gray-50 dark:bg-gray-800"
    >
      <div class="eine grid grid-cols-2 gap-8 sm:gap-12 lg:grid-cols-2">
        {
          features.map((feature) => (
            <div class="flex flex-col items-center gap-4 sm:gap-5 sm:flex-row">
              <div class="bg-gray-100 dark:bg-gray-700 rounded-full w-16 h-16 lg:w-24 lg:h-24 flex items-center justify-center shrink-0">
                <img
                  src={feature.icon}
                  alt={feature.title}
                  class="w-10 lg:w-12 h-10 lg:h-12"
                />
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 sm:text-2xl dark:text-white">
                  {feature.title}
                </h3>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="mt-8 text-center lg:mt-16">
      <a
        href="#"
        class="text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
      >
        Get a demo
        <svg
          aria-hidden="true"
          class="w-5 h-5 ml-2 -mr-1"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  @media (width <= 639px) {
    .eine {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
  }
</style>
