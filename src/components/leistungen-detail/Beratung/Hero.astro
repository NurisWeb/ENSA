---
import "@fontsource-variable/montserrat";
---

<section class="flex bg bg-no-repeat bg-cover bg-center">
  <div class="overlay">
    <div
      class="place-content-center relative py-8 px-4 mx-auto max-w-screen-xl text-white lg:py-36 xl:px-0 z-1"
    >
      <div class="mb-6 max-w-screen-md lg:mb-0 text-center">
        <h1
          class="mb-4 text-4xl font-extrabold tracking-tight leading-tight text-white md:text-5xl lg:text-6xl"
          transition:animate="slide"
        >
          Individuelle Beratung
        </h1>
      </div>
    </div>
  </div>
</section>

<style>
  body {
    font-family: "Montserrat Variable", sans-serif;
  }

  section {
    display: flex;
    justify-content: center;
  }

  .bg {
    background-image: url("/kontakt.webp");
    background-position: center;
    background-size: 100% 100%;
  }

  .overlay {
    display: flex;
    text-align: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.36);
    width: 100%;
  }
</style>
