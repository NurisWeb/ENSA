---
import PopupWrapper from "./city/PopupWrapper";
import { Image } from "astro:assets";

// Importiere die Bilder, um sie als `Image`-Komponente zu nutzen
import HeilbronnImage from "../assets/ortsschilder/ortsschild-heilbronn.png";
import StuttgartImage from "../assets/ortsschilder/ortsschild-stuttgart.png";
import KarlsruheImage from "../assets/ortsschilder/ortsschild-karlsruhe.png";
import LudwigsburgImage from "../assets/ortsschilder/ortsschild-ludwigsburg.png";
import MannheimImage from "../assets/ortsschilder/ortsschild-mannheim.png";
import MosbachImage from "../assets/ortsschilder/ortsschild-mosbach.png";
import NeckarsulmImage from "../assets/ortsschilder/ortsschild-neckarsulm.png";
import PforzheimImage from "../assets/ortsschilder/ortsschild-pforzheim.png";
import ReutlingenImage from "../assets/ortsschilder/ortsschild-reutlingen.png";
import SinsheimImage from "../assets/ortsschilder/ortsschild-sinsheim.png";
import WaiblingenImage from "../assets/ortsschilder/ortsschild-waiblingen.png";
---

<section class="my-section">
  <div class="overlay">
    <h2
      class="mb-6 lg:mb-8 text-3xl lg:text-4xl tracking-tight font-extrabold text-center text-gray-900"
    >
      Wir sind unter anderem in folgenden <br /><span class="bold"
        >REGIONEN</span
      > und
      <span class="bold">UMKREIS</span><span class="bold"> FÃœR SIE</span> im <span
        class="bold">EINSATZ</span
      >
    </h2>
    <div class="image-gallery">
      <!-- Verwende die importierten Image-Komponenten -->
      <a href="/teppichreinigung-heilbronn">
        <Image src={HeilbronnImage} alt="ortsschild-heilbronn" />
      </a>
      <a href="/teppichreinigung-stuttgart">
        <Image src={StuttgartImage} alt="ortsschild-stuttgart" />
      </a>
      <a href="/teppichreinigung-karlsruhe">
        <Image src={KarlsruheImage} alt="ortsschild-karlsruhe" />
      </a>
      <a href="/teppichreinigung-ludwigsburg">
        <Image src={LudwigsburgImage} alt="ortsschild-ludwigsburg" />
      </a>
      <a href="/teppichreinigung-mannheim">
        <Image src={MannheimImage} alt="ortsschild-mannheim" />
      </a>
      <a href="/teppichreinigung-mosbach">
        <Image src={MosbachImage} alt="ortsschild-mosbach" />
      </a>
      <a href="/teppichreinigung-neckarsulm">
        <Image src={NeckarsulmImage} alt="ortsschild-neckarsulm" />
      </a>
      <a href="/teppichreinigung-pforzheim">
        <Image src={PforzheimImage} alt="ortsschild-pforzheim" />
      </a>
      <a href="/teppichreinigung-reutlingen">
        <Image src={ReutlingenImage} alt="ortsschild-reutlingen" />
      </a>
      <a href="/teppichreinigung-sinsheim">
        <Image src={SinsheimImage} alt="ortsschild-sinsheim" />
      </a>
      <a href="/teppichreinigung-waiblingen">
        <Image src={WaiblingenImage} alt="ortsschild-waiblingen" />
      </a>
    </div>
    <PopupWrapper client:load />
  </div>

  <style>
    section {
      display: flex;
      justify-content: center;
      background-color: #f7f7f7;
    }

    button {
      background-color: #2d6aff;
      font-weight: 600;
      border-radius: 50px;
      border: 2px solid white;
      box-shadow: rgb(0 0 0 / 40%) 0px 7px 29px 0px;
      transition: 1s ease-in-out;
      letter-spacing: 1.2px;
    }

    button:hover {
      border: 2px solid turquoise;
      transform: scale(1.008);
    }

    .image-gallery {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: center;
      align-items: center;
      margin-top: 20px;
      max-width: 100%;
      margin-left: auto;
      margin-right: auto;
    }

    img {
      width: 79%;
      min-width: 91px;
      height: auto;
      flex: 1 1 147px;
      max-width: 140px;
    }

    .overlay {
      width: 90%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .my-section {
      padding-top: 60px;
      padding-bottom: 60px;
      text-align: center;
    }

    .my-section h2 {
      font-weight: normal;
      text-align: center;
    }

    .my-section h2 .bold {
      font-weight: 800;
    }

    .image-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(96px, 1fr));
      gap: 10px;
      justify-content: center;
      margin-top: 20px;
      max-width: 100%;
      margin-left: auto;
      margin-right: auto;
    }

    .image-gallery img {
      width: 100%;
      height: auto;
    }

    .my-button {
      margin-top: 2rem;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      display: inline-block;
    }
  </style>
</section>
