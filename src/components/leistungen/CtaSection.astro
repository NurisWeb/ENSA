<section class="bg-white dark:bg-gray-900 text-center">
  <div class="py-8 px-4 mx-auto max-w-screen-2xl sm:py-16 lg:px-6">
    <div class="mb-12 lg:mb-16">
      <h2
        class="mb-4 text-3xl tracking-tight font-extrabold text-gray-900 dark:text-white"
      >
        Teppich Rundum-Service
      </h2>
      <p class="text-gray-500 sm:text-xl dark:text-gray-400">
        Ab einen Auftragswert von 99,-€ erhalen Sie eine <br />
        <strong>KOSTENLOSE ABHOL- UND BRINGSERVICE</strong>
      </p>
    </div>

    <div
      class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0"
    >
      {
        features.map((feature) => (
          <div class="mobile-m text-left relative same-h">
            <div class="relative bg-gradient-to-r from-blue-400 via-purple-400 to-blue-600 rounded-lg overflow-hidden text-left">
              <img
                src={feature.icon}
                alt={feature.title}
                class="absolute inset-0 w-full h-full object-cover transition-opacity duration-500 opacity-0"
                onload="this.style.opacity='1';"
              />
              <div class="h-40 w-full" />
            </div>
            <h3 class="h3 mt-4 text-2xl font-bold dark:text-white mb-2">
              {feature.title}
            </h3>
            {feature.text && (
              <p class="text-gray-500 dark:text-gray-400">{feature.text}</p>
                <div class="btnbox">
                  <a href={feature.link}>
          <button
            class="px-5 py-3 text-base font-bold text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
            >Mehr erfahren</button></a>
        </div>

            )}
            
          </div>
          
        ))
      }
      
    </div>
  </div>
</section>

<style>


.same-h {
      display: flex;
    flex-direction: column;
    justify-content: space-between;
}
  .btnbox {
    display: flex;
    justify-content: flex-start;
  }

  button {
    background-color: #2d6aff;
    border-radius: 50px;
    border: 2px solid white;
    box-shadow: rgb(0 0 0 / 40%) 0px 7px 29px 0px;
    margin-top: 1.5rem;
    transition: 1s ease-in-out;
  }

  button:hover {
    border: 2px solid turquoise;
    transform: scale(1.008);
  }

    @media (width <= 767px) {
    section {
      padding: 4rem 2rem 0;
    }

    section > div {
      padding: 0;
    }

    .btnbox {
      padding-top: 1rem;
    }

    .h3 {
      margin: 2rem 1.8px 1rem;
    }
    .mobile-m {
      margin-bottom: 4rem !important;
    }
  }

  @media (width <= 639px) {
    .eine {
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }
  }
</style>
