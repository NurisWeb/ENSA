---
import { fade, ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Hero from "../components/leistungen/Abholservice/Hero.astro";
import Footer from "../components/Footer.astro";
import Mail from "../components/Mail.astro";
import RugBanner from "../components/RugBanner.astro";
import CtaSection from "../components/leistungen/Abholservice/CtaSection.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <ViewTransitions />

    <title>Abhol- und Bringservice</title>
  </head>
  <body>
    <Mail />
    <Header transition:animate={fade({ duration: "0.4s" })} />
    <Hero transition:animate={fade({ duration: "0.4s" })} />
    <CtaSection />
    <RugBanner />
    <Footer />
  </body>
</html>
