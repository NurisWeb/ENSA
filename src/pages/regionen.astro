---
import { fade, slide, ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Hero from "../components/Regionen/Hero.astro";
import Footer from "../components/Footer.astro";
import RugBanner from "../components/RugBanner.astro";
import CtaSection from "../components/Regionen/CtaSection.astro";
import { SEO } from "astro-seo";
import { Schema } from "astro-seo-schema";
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />

    <ViewTransitions />

    <!-- SEO Component -->
    <SEO
      title="Teppichreinigung in Heilbronn, Stuttgart, und weiteren Regionen"
      description="ENSA Teppichreinigung bietet professionelle Reinigungsdienste in Heilbronn, Stuttgart, Ludwigsburg und vielen weiteren Regionen an. Jetzt informieren!"
      openGraph={{
        basic: {
          title:
            "Teppichreinigung in Heilbronn, Stuttgart, und weiteren Regionen",
          type: "website",
          image:
            "https://ensa-teppichreinigung.de/baden-würrtemberg-banner.webp",
          url: "https://ensa-teppichreinigung.de/regionen",
        },
      }}
      twitter={{
        creator: "@ensateppichreinigung",
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
        meta: [
          {
            name: "twitter:image",
            content:
              "https://ensa-teppichreinigung.de/baden-würrtemberg-banner.webp",
          },
          {
            name: "twitter:title",
            content:
              "Teppichreinigung in Heilbronn, Stuttgart, und weiteren Regionen",
          },
          {
            name: "twitter:description",
            content:
              "Wir bieten professionelle Teppichreinigungen in mehreren Regionen an, einschließlich Stuttgart, Ludwigsburg, und mehr.",
          },
        ],
      }}
    />

    <!-- Schema.org Component -->
    <Schema
      item={{
        "@context": "https://schema.org",
        "@type": "Service",
        name: "Teppichreinigung in verschiedenen Regionen",
        description:
          "ENSA Teppichreinigung bietet Teppich- und Polsterreinigungsservices in verschiedenen Regionen in Baden-Württemberg an.",
        provider: {
          "@type": "Organization",
          name: "ENSA Teppichreinigung",
        },
        areaServed: [
          { "@type": "Place", name: "Heilbronn" },
          { "@type": "Place", name: "Stuttgart" },
          { "@type": "Place", name: "Ludwigsburg" },
          { "@type": "Place", name: "Mannheim" },
          { "@type": "Place", name: "Mosbach" },
          { "@type": "Place", name: "Neckarsulm" },
          { "@type": "Place", name: "Pforzheim" },
          { "@type": "Place", name: "Reutlingen" },
          { "@type": "Place", name: "Sinsheim" },
          { "@type": "Place", name: "Waiblingen" },
          { "@type": "Place", name: "Heidelberg" },
          { "@type": "Place", name: "Karlsruhe" },
        ],
        serviceType: "Teppichreinigung, Polsterreinigung",
        url: "https://ensa-teppichreinigung.de/regionen",
        telephone: "+4971312795256",
      }}
    />
  </head>
  <body>
    <Header transition:animate={fade({ duration: "0.4s" })} />
    <Hero transition:animate={fade({ duration: "0.4s" })} />
    <CtaSection transition:animate={slide({ duration: "0.8s" })} />
    <RugBanner />
    <Footer />
  </body>
</html>
