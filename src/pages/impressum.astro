---
import { fade, slide, ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Hero from "../components/allgemein/Impressum/Hero.astro";
import Footer from "../components/Footer.astro";
import RugBanner from "../components/RugBanner.astro";
import CtaSection from "../components/allgemein/Impressum/CtaSection.astro";
import CtaSection2 from "../components/allgemein/Impressum/CtaSection2.astro";
import { SEO } from "astro-seo";
import { Schema } from "astro-seo-schema";
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />

    <ViewTransitions />

    <!-- SEO Component -->
    <SEO
      title="Impressum – ENSA Teppichreinigung"
      description="Hier finden Sie das Impressum der ENSA Teppichreinigung mit allen rechtlichen Angaben, gemäß § 5 TMG."
    />

    <!-- Schema.org Component -->
    <Schema
      item={{
        "@context": "https://schema.org",
        "@type": "WebPage",
        name: "Impressum",
        description: "Rechtliche Informationen zur ENSA Teppichreinigung.",
        author: {
          "@type": "Person",
          name: "Emre Dilsiz",
        },
        contactPoint: {
          "@type": "ContactPoint",
          contactType: "Customer Service",
          telephone: "+49 7131 2795256",
          email: "info@ensa-teppichreinigung.de",
          areaServed: "DE",
          availableLanguage: "Deutsch",
        },
      }}
    />
  </head>
  <body>
    <Header transition:animate={fade({ duration: "0.4s" })} />
    <Hero transition:animate={fade({ duration: "0.4s" })} />
    <CtaSection transition:animate={slide({ duration: "0.8s" })} />
    <CtaSection2 />
    <RugBanner />
    <Footer />
  </body>
</html>
