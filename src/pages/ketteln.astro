---
import { fade, slide, ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Hero from "../components/leistungen-detail/Kettlung/Hero.astro";
import Footer from "../components/Footer.astro";
import RugBanner from "../components/RugBanner.astro";
import CtaSection from "../components/leistungen-detail/Kettlung/CtaSection.astro";
import Banner from "../components/Banner.astro";
import FooterBanner from "../components/FooterBanner.astro";
import { SEO } from "astro-seo";
import { Schema } from "astro-seo-schema";
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />

    <ViewTransitions />

    <!-- SEO Component -->
    <SEO
      title="Kettlung von Teppichen – ENSA Teppichreinigung"
      description="Professionelles Ketteln von Teppichen. Verleihen Sie Ihrem Teppich eine individuelle Note und schützen Sie ihn vor dem Ausfransen."
      openGraph={{
        basic: {
          title: "Kettlung von Teppichen – ENSA Teppichreinigung",
          type: "website",
          image:
            "https://ensa-teppichreinigung.de/Teppich-flicken.webp",
          url: "https://ensa-teppichreinigung.de/kettlung",
        },
      }}
      twitter={{
        creator: "@ensateppichreinigung",
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
        meta: [
          {
            name: "twitter:image",
            content:
              "https://ensa-teppichreinigung.de/Teppich-flicken.webp",
          },
          { name: "twitter:title", content: "Kettlung von Teppichen" },
          {
            name: "twitter:description",
            content:
              "Professionelle Kettlung für Teppiche. Lassen Sie Ihre Teppiche verstärken und vor dem Ausfransen schützen.",
          },
        ],
      }}
    />

    <!-- Schema.org Component -->
    <Schema
      item={{
        "@context": "https://schema.org",
        "@type": "Service",
        name: "Kettlung von Teppichen",
        description:
          "Professionelles Ketteln von Teppichen für mehr Eleganz und Schutz vor Ausfransen.",
        provider: {
          "@type": "Organization",
          name: "ENSA Teppichreinigung",
        },
        areaServed: {
          "@type": "Place",
          name: "Heilbronn",
        },
        serviceType: "Kettlung",
        url: "https://ensa-teppichreinigung.de/kettlung",
        telephone: "+4971312795256",
        image: "https://ensa-teppichreinigung.de/Teppich-flicken.webp",
      }}
    />
  </head>
  <body>
    <Header transition:animate={fade({ duration: "0.4s" })} />
    <Hero transition:animate={fade({ duration: "0.4s" })} />
    <CtaSection transition:animate={slide({ duration: "0.8s" })} />
    <Banner />
    <FooterBanner />
    <RugBanner />
    <Footer />
  </body>
</html>
