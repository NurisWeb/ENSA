---
import CityPage from "../components/city/CityPage.astro";
import { cityList, cityDataMap } from "../data/cities.js";

// Hole den Städtenamen aus der URL, z.B. über eine Suchabfrage oder manuell festlegen
const city = "stuttgart"; // Hier kannst du den Namen der Stadt dynamisch festlegen

// Überprüfe, ob die Stadt existiert
const cityData = cityDataMap[city.toLowerCase()];
---

<CityPage city={city} />

<style>
  body {
    font-family: "Montserrat Variable", sans-serif;
  }

  section {
    display: flex;
    justify-content: center;
  }

  .bg {
    background-image: ("/Teppich-flicken.webp");
    background-position: center;
  }

  .overlay {
    display: flex;
    text-align: center;
    justify-content: center;
    background-color: rgb(0 0 0 / 25%);
    width: 100%;
  }
</style>
