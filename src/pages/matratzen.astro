---
import { fade, slide, ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
import Hero from "../components/leistungen-detail/Matratzen/Hero.astro";
import Footer from "../components/Footer.astro";
import RugBanner from "../components/RugBanner.astro";
import CtaSection from "../components/leistungen-detail/Matratzen/CtaSection.astro";
import Banner from "../components/leistungen-detail/Matratzen/Banner.astro";
import FooterBanner from "../components/FooterBanner.astro";
import CtaSection2 from "../components/leistungen-detail/Matratzen/CtaSection2.astro";
import { SEO } from "astro-seo";
import { Schema } from "astro-seo-schema";
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />

    <ViewTransitions />

    <!-- SEO Component -->
    <SEO
      title="Matratzenreinigung – Für Ihre Gesundheit | ENSA Teppichreinigung"
      description="Lassen Sie Ihre Matratze professionell reinigen, um Allergieauslöser wie Milben und Bakterien zu beseitigen. Wir bieten Tiefenreinigungen für ein gesundes Schlafambiente."
      openGraph={{
        basic: {
          title:
            "Matratzenreinigung – Für Ihre Gesundheit | ENSA Teppichreinigung",
          type: "website",
          image:
            "https://ensa-teppichreinigung.de/Reinigung-von-Matrazen-Professionell.webp",
          url: "https://ensa-teppichreinigung.de/matratzen",
        },
      }}
      twitter={{
        creator: "@ensateppichreinigung",
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
        meta: [
          {
            name: "twitter:image",
            content:
              "https://ensa-teppichreinigung.de/Reinigung-von-Matrazen-Professionell.webp",
          },
          {
            name: "twitter:title",
            content:
              "Matratzenreinigung – Für Ihre Gesundheit | ENSA Teppichreinigung",
          },
          {
            name: "twitter:description",
            content:
              "Befreien Sie Ihre Matratze von Milben, Bakterien und Allergieauslösern mit unserer professionellen Reinigung.",
          },
        ],
      }}
    />

    <!-- Schema.org Component -->
    <Schema
      item={{
        "@context": "https://schema.org",
        "@type": "Service",
        name: "Matratzenreinigung",
        description:
          "Professionelle Matratzenreinigung zur Beseitigung von Milben und Bakterien. Schaffen Sie ein gesundes Schlafumfeld mit ENSA Teppichreinigung.",
        provider: {
          "@type": "Organization",
          name: "ENSA Teppichreinigung",
        },
        areaServed: {
          "@type": "Place",
          name: "Heilbronn",
        },
        serviceType: "Matratzenreinigung",
        url: "https://ensa-teppichreinigung.de/matratzen",
        telephone: "+4971312795256",
        image:
          "https://ensa-teppichreinigung.de/Reinigung-von-Matrazen-Professionell.webp",
      }}
    />
  </head>
  <body>
    <Header transition:animate={fade({ duration: "0.4s" })} />
    <Hero transition:animate={fade({ duration: "0.4s" })} />
    <CtaSection transition:animate={slide({ duration: "0.8s" })} />
    <CtaSection2 transition:animate={slide({ duration: "0.8s" })} />
    <Banner />
    <FooterBanner />
    <RugBanner />
    <Footer />
  </body>
</html>
